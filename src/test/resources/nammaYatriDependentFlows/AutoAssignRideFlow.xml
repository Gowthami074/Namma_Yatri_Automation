<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Normal Ride Flow">
<parameter name="flowOption" value="3"></parameter>
<parameter name="userApp" value="nammaYatriDebug"/>
<parameter name="driverApp" value="nammaYatriPartnerDebug"/>
<listeners>
        <listener class-name="TestReport.TestListener"/>
    </listeners>
    
    <!-- DriverLogin -->
    <test name="DriverLogin" group-by-instances="true">
        <classes>
            <class name="Driver.DriverLoginFlow">
                <methods>
                    <include name="successfulDriverLogin" />
                </methods>
            </class>
        </classes>
    </test>
     <!-- Mock Driver Location for Master Ride Search -->
    <test name="Mock the Driver location">
        <classes>
            <class name="Driver.Simulation">
                <methods>
                    <include name="masterDriverLocation"></include>
                </methods>
            </class>
        </classes>
    </test> 

    <!-- UserLogin -->
    <test name="UserLogin">
        <classes>
            <class name="User.Android.UserLoginFlow">
                <methods>
                    <include name="successfulUserLogin" />
                </methods>
            </class>
        </classes>
    </test>

   <test name="RideSearch and Getting Estimates" >
        <classes>
            <class name="User.Android.RideSearch">
                <methods>
                    <include name="SearchForRideFromSuggestion"></include>
                </methods>
            </class>
            <class name="User.Android.EstimateScreen">
                <methods>
                    <include name="react_variantSelection"></include>
                    <include name="slideToBook"></include>
                    
                </methods>
            </class>
        </classes>
    </test>

    <!-- Accepting the RideRequest -->
    <test name="Accepting the RideRequest">
        <classes>
            <class name="Driver.PopUpScreen">
                <methods>
                    <include name="acceptOffer"></include>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Mock Driver Location for Master Pickup -->
    <test name="Mock the Driver location  Master Pickup">
        <classes>
            <class name="Driver.Simulation">
                <methods>
                    <include name="masterPickupSimualtion"></include>
                </methods>
            </class>
        </classes>
    </test> 

    <!-- Reading OTP from OTP screen -->
    <test name="Reading OTP from OTP screen" >
        <classes>
            <class name="User.Android.RideAssignScreen">
                <methods>
                    <include name="readOTP"></include>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Starting the Ride -->
    <test name="Starting the Ride">
        <classes>
            <class name="Driver.StartRideScreen">
                <methods>
                    <include name="startRide"></include>
                </methods>
            </class>
            <class name="Driver.EnterOTPPopUp">
                <methods>
                    <include name="enterCorrectOTP"></include>
                </methods>
            </class>
            <class name="User.Android.PopUpsHandling">
                <methods>
                    <include name="AC_PopUp"></include>
                </methods>
            </class>
            <class name="Driver.AndroidBackButton">
                <methods>
                    <include name="tapBack"></include>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Mock Driver Location for Master Drop -->
    <test name="Mock the Driver location Master Drop">
        <classes>
            <class name="Driver.Simulation">
                <methods>
                    <include name="masterDropSimualtion"></include>
                </methods>
            </class>
        </classes>
    </test> 
    

    <!-- Ending the Ride -->
    <test name="Ending the Ride">
        <classes>
            <class name="Driver.EndRideScreen">
                <methods>
                    <include name="clickEndRide"></include>
                </methods>
            </class>
        </classes>
    </test>

    <!-- User Giving Rating -->
    <test name="User Giving Rating">
        <classes>
            <class name="User.Android.UserRatingScreen">
                <methods>
                    <include name="ratingScreen2"></include>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Driver Giving Rating -->
    <test name="Driver Giving Rating">
        <classes>
            <class name="Driver.DriverRatingScreen">
                <methods>
                    <include name="ratingScreen"></include>
                </methods>
            </class>
        </classes>
    </test>
</suite>